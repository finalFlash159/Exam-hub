# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./exam_hub.db

# Security
SECRET_KEY=your-super-secret-key-minimum-32-characters-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-redis-password  # Required for production

# Rate Limiting
RATE_LIMIT_ENABLED=true

# AI Providers
# Get Gemini API key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Get OpenAI API key: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Default AI Provider (openai, gemini, mock)
DEFAULT_AI_PROVIDER=gemini

# Google Cloud Credentials (optional for Gemini)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Email Service (Brevo/Sendinblue)
# Get API key: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key-here
FROM_EMAIL=noreply@examhub.com
FROM_NAME=Exam Hub

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Email Template IDs (from Brevo dashboard)
VERIFICATION_EMAIL_TEMPLATE_ID=1
PASSWORD_RESET_TEMPLATE_ID=2

# Upload Configuration
MAX_FILE_SIZE=16777216  # 16MB in bytes

# Application Environment
ENVIRONMENT=development  # development, staging, production
FLASK_ENV=development
FLASK_DEBUG=True

# Server Configuration (optional)
HOST=0.0.0.0
PORT=8000
