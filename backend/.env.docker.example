# Docker Compose Environment Variables
# Copy this to .env.docker for local development

# PostgreSQL Configuration
POSTGRES_DB=exam_hub
POSTGRES_USER=exam_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration (for rate limiting and caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Optional, uncomment and set for production

# Rate Limiting
RATE_LIMIT_ENABLED=true  # Set to false to disable rate limiting

# Application Configuration
DATABASE_URL=postgresql+asyncpg://exam_user:your_secure_password_here@localhost:5432/exam_hub
REDIS_URL=redis://localhost:6379/0
